---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import Blogspot from "../components/Blogspot.astro";
import "../styles/global.css";

const pageTitle = "Blog";
const allPosts = await getCollection('blog');
const pageSubtitle = "My Astro Learning Blog";
---

<BaseLayout pageTitle={pageTitle} pageSubtitle={pageSubtitle}>
  <p>This is where I will post about my journey learning Astro.</p>
  <ul>
    {allPosts.map((post: any) => <Blogspot url={`/posts/${post.id}`} title={post.data.title}/>)}
  </ul>
</BaseLayout>
