---
import BaseLayout from "../layouts/BaseLayout.astro";
import Blogspot from "../components/Blogspot.astro";
import "../styles/global.css";

const pageTitle = "Blog";
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
const pageSubtitle = "My Astro Learning Blog";
---

<BaseLayout pageTitle={pageTitle} pageSubtitle={pageSubtitle}>
  <p>This is where I will post about my journey learning Astro.</p>
  <ul>
    {allPosts.map((post: any) => <Blogspot url={post.url} title={post.frontmatter.title}/>)}
  </ul>
</BaseLayout>
