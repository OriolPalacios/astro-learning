---
import "../styles/global.css";

const { frontmatter } = Astro.props;
const imageURL = frontmatter.image?.url || "black";
const tags = frontmatter.tags;
---

<!-- <figure>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
</figure> --><!-- adding this meta charset is very important! -->
<meta charset="utf-8" />
<div class="content-container">
  <header>
    <hr />
    <h1>{frontmatter.title}</h1>
    <p>Written by {frontmatter.author}</p>
    <p>Published on: {frontmatter.pubDate.toString().slice(0, 10)}</p>
    <blockquote>Description: {frontmatter.description}</blockquote>
    <div class="tags">
      {
        tags.map((tag: string) => (
          <p class="tag">
            <a href={`/tags/${tag}`}>{tag}</a>
          </p>
        ))
      }
    </div>
  </header>
  <hr />
  <main>
    <slot />
  </main>
</div>
<style>
  blockquote {
    border-left: 4px solid #ccc;
    padding-left: 16px;
    color: #666;
    font-style: italic;
  }
  .content-container {
    background-image: var(--imageURL);
    background-size: cover;
    width: 100%;
    height: 100%;
  }
  a {
    color: #00539f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
